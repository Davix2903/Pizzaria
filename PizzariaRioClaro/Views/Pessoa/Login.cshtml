@{
    Layout = null;
}
<DOCTYPE html>
    <html>

    <head>
        <link rel="icon" href="~/Content/TelaLogin/logo.png">
        <link rel="stylesheet" href="http://fonts.googleapis.com/css?family=Open+Sans+Condensed:700">
        <link rel="stylesheet" href="~/Content/TelaLogin/Style.css">
        <meta charset="utf-8">
        <title>Login - Pizzaria Rio Claro</title>
    </head>

    <body>
        <form action="/Pessoa/Autentica" method="post">

            <div class="loginBox ">
                <img src="~/Content/TelaLogin/user.png" class="user">
                <h2>Faça seu login aqui</h2>
                <div>
                    <p>Email</p>
                    <input type="text" name="login" placeholder="Insira seu email">
                    <p>Senha</p>
                    <input type="password" name="senha" placeholder="●●●●●●●●">
                    <input type="submit" name="" value="Login">
                    <a class="cadastro" href="#">Esqueceu sua senha?</a>
                    <br> <br>
                    <label class="conta">Não possui uma conta? </label>
                    <a class="cadastro" onclick="window.location.href='../Pessoa/Cadastro'">Cadastre-se</a>
                </div>
            </div>
        </form>
    </body>

</html>
