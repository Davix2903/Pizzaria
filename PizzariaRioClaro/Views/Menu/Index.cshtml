@section scriptsMenu {
    <script>
        function adiciona(id, tipo) {
            jQuery.ajax({
                data: { tipo: tipo },
                dataType: 'json',
                url: '/Carrinho/Adiciona/' + id,
                success: function (resposta) {
                    if (resposta.adicionou) {
                        alert("Sabor adicionado.");
                    } else {
                        alert(resposta.msg);
                    }
                }
            });
        }
    </script>
}

