@using PizzariaRioClaro.Models;

<link href="//maxcdn.bootstrapcdn.com/bootstrap/3.3.0/css/bootstrap.min.css" rel="stylesheet" id="bootstrap-css">
<link href="~/Content/albertos - placehold/css/estiloProjeto.css" />


<div class="container-wrapper">
    <div class="page-bg" style=" background-image: url('/Content/albertos - placehold/upload/'); "></div>
    <div id="container">
        <!-- start container -->
        <div class="page-title-wrapper">
            <div class="page-title-outher">
                <div class="page-title-inner">
                    <span class="page-title-icon flaticon-pizza-slice"></span>
                    <h1 class="page-title">Sabores Salgados</h1>
                    <div class="clear"></div>
                </div>
                <div class="clear"></div>
            </div>
        </div>
        <div class="clear"></div>
        <div class="page-wrapper">
            <div class="offer-menu-wrapper">

                @foreach (var sabor in ViewBag.Sabores)
                {
                    <div class="single-offer-item">
                        <div class="single-offer-details">
                            <div class="single-offer-title">@sabor.Sabor</div>
                            <div class="single-offer-content">@sabor.Ingredientes</div>
                        </div>
                        <div class="single-offer-price">R$@sabor.Preco</div>
                        <div class="clear"></div>
                        <br />

                        @if (Session["PessoaLogada"] as Pessoa != null)
                        {
                            var pessoa = Session["PessoaLogada"] as Pessoa;
                            if (pessoa.TipoDePessoa == 'C')
                            {
                                <button style="color: white" class="btn btn-success openSans" onclick="adiciona(@sabor.Id, 'S')">
                                    Adicionar ao carrinho
                                </button>
                            }
                        }

                        <hr />


                    </div>
                }
            </div>
        </div>
    </div>
</div>
<div class="clear"></div>


